{
  "framework": "mocha",
  "serve_files": [
    "browserified.js"
  ],
  "css_files": [
    "src/styles/html.css"
  ],
  "src_files": [
    "package.json",
    "src/**/*.*",
    "test/*.js"
  ],
  "before_tests": "npm run prepublish && node scripts/compile-tests.js browserified.js",
  "on_exit": "rm browserified.js",
  "launch_in_dev": ["chrome"],
  "launch_in_ci": ["chrome"]
}
